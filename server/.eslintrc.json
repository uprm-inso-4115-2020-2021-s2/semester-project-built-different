{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true,
    "node": true
  },
  "extends": ["prettier", "eslint:recommended"],
  "plugins": ["prettier"],
  "parserOptions": {
    "ecmaVersion": 12
  },
  "ignorePatterns": ["__tests__/*.js"],
  "rules": {
    "prettier/prettier": ["error"]
  }
}
